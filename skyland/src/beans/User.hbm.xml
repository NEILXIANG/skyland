<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans">
	<class name="User"  table="per_user" dynamic-insert="true" dynamic-update="true" >
		<id name="num" column="num" type="int" >
			<generator class="increment" />
		</id>
		<property name="score" column="score" type="int"/>
		<property name="defaultAddressNum" column="default_address_num" type="int"/>
		<property name="useable" column="useable" type="boolean"/>
		<property name="speakable" column="speakable" type="boolean"/>
		<property name="username" column="username" type="string"/>
		<property name="password" column="password" type="string"/>
		<property name="realName" column="real_name" type="string"/>
		<property name="phone" column="phone" type="string"/>
		<property name="email" column="email" type="string"/>
		<property name="address" column="address" type="string"/>
		<property name="zip" column="zip_code" type="string"/>
		<property name="remark" column="remark" type="text"/>
		<property name="lastLoginTime" column="last_login_time" type="string"/>
		<property name="registerTime" column="register_time" type="string"/>
	</class>

</hibernate-mapping>


<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans">
	<class name="Category"  table="goods_category" dynamic-insert="true" dynamic-update="true">
		<id name="num" column="num" type="int" >
			<generator class="increment" />
		</id>
		<property name="name" column="name_" type="string"/>
		<property name="isHot" column="is_hot" type="boolean"/>
		<property name="isUsed" column="is_used" type="boolean"/>
	</class>
 
</hibernate-mapping>


